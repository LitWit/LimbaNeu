<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.limba"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.limba.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.limba.NeueWoerterActivity"
            android:label="Neue Wörter" >
        </activity>
        <activity
            android:name="com.example.limba.DetailActivity"
            android:label="Detail" >
        </activity>
        <activity
            android:name="com.example.limba.WortHinzufuegenActivity"
            android:label="Wort hinzufügen" >
        </activity>
    </application>

</manifest>

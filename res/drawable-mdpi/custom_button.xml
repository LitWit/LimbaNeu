<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#F4E3EA"
                android:endColor="#C2AFC6"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#3A3C40" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FF9F00"
                android:startColor="#FFF554"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#3A3C40" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#FFF554"
                android:startColor="#FF9F00"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#3A3C40" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
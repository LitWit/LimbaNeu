<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88CFC2"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bildbutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custom_button"
        android:text="Bild"
        android:textColor="#000000" /> 

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="festes persisches Wort"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/lautsprecherPersischButton"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_lautsprecheraus" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versuchen Sie, das Wort auf persisch auszusprechen"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text=""
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/microVersuchButton"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_microaus" />

        <ImageButton
            android:id="@+id/lautsprecherVersuschButton"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_lautsprecheraus" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text=""
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/textBewertung1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bewertung"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textBewertung2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bisher wurde noch keine Bewertung fÃ¼r Ihre Aussprachetraining vergeben"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:visibility="invisible"
            android:text="" />

        <Button
            android:id="@+id/neuerVersuchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="Neuer Versuch"
            android:textColor="#000000"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:visibility="invisible"
            android:text="" />

    </LinearLayout>

</LinearLayout>
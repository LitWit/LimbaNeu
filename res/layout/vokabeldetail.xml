<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88CFC2"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bildbutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/custom_button"
        android:text="Bild"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="persisch" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.78"
            android:text="Persisches festes Wort"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_micro" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_lautsprecher" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="deutsch" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="deutsche Ãœbersetzung" >

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_micro" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_lautsprecher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="+ Vokabelliste"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="Trainieren"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>
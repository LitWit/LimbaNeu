<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88CFC2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.limba.Trainieren" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bildButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="Bild"
            android:textColor="#000000" />
    </LinearLayout>

   
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="88dp"
        android:layout_weight="0.78"
        android:text="Versuche das Wort auf Persisch auszusprechen"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/lautsprecherPersischButton"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_alignTop="@+id/persischesTextfeld"
        android:src="@drawable/ic_lautsprecher" />

    <TextView
        android:id="@+id/persischesTextfeld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="23dp"
        android:layout_weight="0.78"
        android:text="Persisches festes Wort"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="21dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/microVersuchButton"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_micro" />

        <ImageButton
            android:id="@+id/lautsprecherVersuschButton"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_lautsprecher" />
    </LinearLayout>

</RelativeLayout>
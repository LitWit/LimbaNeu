<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="797dp"
        android:background="#88CFC2"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.limba.Trainieren" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/BildButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:text="Bild"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="88dp"
            android:layout_weight="0.78"
            android:text="Versuche das Wort auf Persisch auszusprechen"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageButton
            android:id="@+id/lautsprecherPersischButton"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_alignRight="@+id/linearLayout1"
            android:layout_alignTop="@+id/persischesTextfeld"
            android:src="@drawable/ic_lautsprecher" />

        <TextView
            android:id="@+id/persischesTextfeld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="23dp"
            android:layout_weight="0.78"
            android:text="Persisches festes Wort"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="21dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/microVersuchButton"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_micro" />

            <ImageButton
                android:id="@+id/lautsprecherVersuschButton"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_lautsprecher" />
        </LinearLayout>

        <TextView
            android:id="@+id/BewertungAndererUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="78dp"
            android:layout_weight="0.78"
            android:text="Es gibt noch keine Bewertung vorhanden."
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/BewertungTitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/BewertungAndererUser"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="28dp"
            android:layout_weight="0.78"
            android:text="Bewertung: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/NeuerVersuchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/BewertungAndererUser"
            android:layout_below="@+id/BewertungAndererUser"
            android:layout_marginTop="36dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="Neuer Versuch"
            android:textColor="#000000" />

        <Button
            android:id="@+id/ZurueckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/NeuerVersuchButton"
            android:layout_alignBottom="@+id/NeuerVersuchButton"
            android:layout_alignLeft="@+id/BewertungAndererUser"
            android:layout_toLeftOf="@+id/NeuerVersuchButton"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="ZurÃ¼ck"
            android:textColor="#000000" />

    </RelativeLayout>

</ScrollView>